@model EditUserViewModel

@{
    ViewData["Title"] = "Edit";
}

<form asp-action="@ViewData["Title"]" method="post">
    <h2>Edit @Model.UserName profile</h2>
    <hr />
    <input type="hidden" asp-for="Id" />
    <div class="form-floating">
        <input asp-for="FirstName" class="form-control" aria-required="true" maxlength="100" />
        <label asp-for="FirstName"></label>
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-floating">
        <input asp-for="LastName" class="form-control" aria-required="true" maxlength="100" />
        <label asp-for="LastName"></label>
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="form-floating">
        <input asp-for="Email" class="form-control" aria-required="true" />
        <label asp-for="Email"></label>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-floating">
        <input asp-for="UserName" class="form-control" aria-required="true" maxlength="100" />
        <label asp-for="UserName"></label>
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>
    <button type="submit" class="w-100 btn btn-lg btn-primary">Edit profile</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}